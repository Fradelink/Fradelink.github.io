#include <stdio.h>
int main()
{
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	//使用数据输入，输入函数scanf
	scanf_s("%d%d", &num1, &num2);//&取地址符号
	//int sum = 0;//c语法规定，变量要定义在当前代码块的最前面
	sum = num1 + num2;
	printf("sum=%d\n", sum);//%d\n整型
	return 0;
}
